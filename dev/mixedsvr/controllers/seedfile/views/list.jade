doctype html
html
	head
		script(src='/jquery-ui-1.10.4.custom/js/jquery-1.10.2.js')
		script(src='/jquery-ui-1.10.4.custom/js/jquery-ui-1.10.4.custom.js')
		link(rel='stylesheet' href='/jquery-ui-1.10.4.custom/css/ui-lightness/jquery-ui-1.10.4.custom.css')
		link(rel='stylesheet', href='/bootstrap-3.1.1-dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='/bootstrap-3.1.1-dist/css/bootstrap-theme.min.css')
		script(src='/bootstrap-3.1.1-dist/js/bootstrap.min.js')
		
		link(rel = 'stylesheet', href = '/style.css')
		script(src="/socket.io/socket.io.js")

		link(rel = 'stylesheet', href = 'fileupload/css/jquery.fileupload.css')
		script(src='fileupload/js/vendor/jquery.ui.widget.js')
		script(src='fileupload/js/jquery.iframe-transport.js')
		script(src='fileupload/js/jquery.fileupload.js')
	header
		include ../../../includes/head

	body
		div.container-fluid
			div.row
				h2( style="float:left") #{suites.smoke.name} seed files management 
				button(id="btn_addtestcase" data-toggle="modal" data-target="#myModal" type="button" class="btn btn-primary btn-lg" style="margin-top:22px;margin-left:20px; padding:5px;")
					span(class="glyphicon glyphicon-plus")
		div(class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
			div.modal-dialog
				div.modal-content
					div.modal-header
						button(type="button" class="close" data-dismiss="modal" aria-hidden="true")&times;
						h4(class="modal-title" id="myModalLabel") Add New Test Case
					div.modal-body
						form(role="form")
							div.form-group
								label(for="ownerEmail") Owner Email address
								input(type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email")
							div.form-group
								label(for="testDescription") Description
								textarea(class="form-control" rows="3")
							div.form-group
								//- label(for="rvtfile") Select Revit File(s)
								span(class="btn btn-success fileinput-button" style="position:relative;overflow:hidden;")
									i(class="glyphicon glyphicon-plus")
									span Select Revit File(s) ...
									input(id="fileupload" type="file" name="files[]" multiple style="opacity:0;position:absolute;top:0px;right:0px;margin:0px;font-size:200px;")
							div.form-group
								label Testing Options
								div.checkbox
									label Ignore 2D Views
										input(type="checkbox")
					div.modal-footer
						button(type="button" class="btn btn-default" data-dismiss="modal") close
						button(type="submit" class="btn btn-primary" data-dismiss="modal") Submit
		div
			table(id="suitesTable", class="table table-hover")
				thead
					tr
						th Name
						th Path
						th Args
						th Owner
						th Description
						th Actions
					tbody
						each ts in suites.smoke.suites
							tr
								td
									p #{ts.name}
								td
									p #{ts.path}
								td
									p #{ts.args}
								td
									p #{ts.owner}
								td
									p #{ts.description}
								td
									p Not Support

